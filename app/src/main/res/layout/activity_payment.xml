<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"

    >

    <ImageView
        android:id="@+id/backCreatePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/titleSelectDate"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/montserrat_semibold"
        android:text="Select Date"
        android:textColor="#FDB161"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkIn"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="121dp"
        android:background="#9fdbf6"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Check In"
        android:textColor="#FDB161"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002" />

    <EditText
        android:id="@+id/dateCheckIn"
        android:layout_width="260dp"
        android:layout_height="112dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="121dp"
        android:background="#5DADEC"
        android:fontFamily="@font/montserrat"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Press to set date"
        android:textColor="#fecf9d"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkIn" />

    <TextView
        android:id="@+id/checkOut"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:background="#9fdbf6"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Check Out"
        android:textColor="#FDB161"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateCheckIn"
        app:layout_constraintVertical_bias="0.17000002" />

    <EditText
        android:id="@+id/dateCheckOut"
        android:layout_width="260dp"
        android:layout_height="112dp"
        android:layout_marginStart="121dp"
        android:layout_marginEnd="120dp"
        android:background="#5DADEC"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:hint="Press to set date"
        android:textColor="#fecf9d"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkOut" />

    <Button
        android:id="@+id/paymentdetail_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:backgroundTint="#FDB161"
        android:fontFamily="@font/montserrat_semibold"
        android:insetLeft="10dp"
        android:insetRight="10dp"
        android:shadowColor="#FF0000"
        android:text="Continue"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateCheckOut"
        app:rippleColor="#934C4C" />

</androidx.constraintlayout.widget.ConstraintLayout>